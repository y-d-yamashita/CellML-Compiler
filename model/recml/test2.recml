<!-- single loop -->
<recml>
  <math>
    <apply loop1 = "pre">
      <eq/>
      <ci>a</ci>
      <ci>b</ci>
    </apply>
    <apply loop1 = "init">
      <eq/>
      <ci>x</ci>
      <ci>y</ci>
    </apply>
    <apply loop1="inner">
      <eq/>
		<apply>
		  <selector/>
		  <ci>r</ci>
		  <ci>tn</ci>
		</apply>
		<apply>
		  <cn>1</cn>
		</apply>
    </apply>
    <condition loop1="loopcond">
      <apply>
        <eq/>
        <ci>tn</ci>
        <cn>1000</cn>
      </apply>
    </condition>
    
    <apply loop1="final">
      <eq/>
      <apply>
        <selector/>
        <ci>x</ci>
        <ci>tn</ci>
      </apply>
      <cn>100</cn>
    </apply>
    
    <apply loop1="post">
      <eq/>
      <ci>x</ci>
      <cn>0</cn>
    </apply>
  </math>
</recml>
  